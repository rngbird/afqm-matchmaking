{
	"$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"files": {
		"includes": [
			"**",
			"!**/dist",
			"!**/build",
			"!**/tests",
			"!**/.next",
			"!**/.svelte-kit",
			"!**/.wrangler",
			"!**/examples",
			"!packages/db/scripts/transfer.ts"
		]
	},
	"formatter": {
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"overrides": [
		{
			"includes": ["**/*.svelte"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off",
						"useImportType": "off"
					},
					"correctness": {
						"noSelfAssign": "off",
						"noUnusedImports": "off",
						"noUnusedVariables": "off"
					}
				}
			}
		}
	]
}
